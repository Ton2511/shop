    }

    .carousel-item {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 150px;
        /* ขนาดของแต่ละภาพ */
        max-width: 100%;
        /* ป้องกันไม่ให้รูปขยายเกินขอบ */
    }

    .custom-size {
        width: 100%;
        /* ใช้ความกว้าง 100% จาก container */
        max-width: 100%;
        /* กำหนดไม่ให้ภาพเกินขนาด container */
        height: auto;
        /* คงอัตราส่วนของภาพ */
    }

    .custom-size-main {
        width: 100%;
        /* ใช้ความกว้าง 100% จาก container */
        max-width: 400px;
        /* จำกัดขนาดภาพหลักให้สูงสุดที่ 300px */
        height: auto;
        /* คงอัตราส่วนของภาพ */
    }

    .carousel-btn {
        position: absolute;
        background-color: white;
        /* สีพื้นหลังปุ่ม */
        color: #333;
        /* สีตัวอักษร */
        border: 1px solid #ccc;
        /* ขอบปุ่ม */
        border-radius: 10%;
        /* ขอบโค้ง */
        padding: 0px;
        cursor: pointer;
        font-size: 15px;
        /* ขนาดของไอคอน */
        width: 40px;
        /* ความกว้างปุ่ม */
        height: 40px;
        /* ความสูงปุ่ม */
        text-align: center;
        z-index: 10;
        /* ให้ปุ่มอยู่บนสุด */
    }

    .btn-up {
        top: 10px;
        /* ตำแหน่งปุ่มขึ้น */
        left: 50%;
        transform: translateX(-50%);
    }

    .btn-down {
        bottom: 10px;
        /* ตำแหน่งปุ่มลง */
        left: 50%;
        transform: translateX(-50%);
    }

    .carousel-buttons {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 0;
        width: 100%;
        z-index: 10;
    }
</style>


