<style>
  .bg-teal {
    background-color: #008080;
    color: white;
  }
  
  .btn-yellow {
    background-color: #FFC107;
    color: #212529;
  }
  
  .section-title {
    font-weight: 600;
    color: #333;
  }
  
  .product-item {
    transition: all 0.3s ease;
    border: 1px solid #f0f0f0;
    border-radius: 8px;
    overflow: hidden;
    height: 100%;
  }
  
  .product-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .tab-image {
    max-width: 100%;
    max-height: 180px;
    object-fit: contain;
  }
  
  .a {
    text-decoration: none;
    color: inherit;
  }
  
  .category-thumbnail {
    width: 120px;
    height: 120px;
    object-fit: cover;
  }
  
  .category-title {
    margin-top: 0.5rem;
    font-size: 1rem;
    color: #333;
  }
  
  /* Banner Blocks Styling */
  .banner-blocks {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 15px;
  }
  
  .banner-ad {
    border-radius: 8px;
    overflow: hidden;
    position: relative;
  }
  
  .block-1 {
    grid-column: span 3;
  }
  
  /* Swiper Customization */
  .swiper-wrapper {
    padding: 10px 0;
  }
  
  .swiper-slide {
    height: auto;
  }
  
  /* Mobile responsive improvements */
  @media (max-width: 767px) {
    .display-1 {
      font-size: 2.2rem;
    }
    .fs-4 {
      font-size: 1rem !important;
    }
    .banner-blocks {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    .block-1, .block-2, .block-3 {
      width: 100%;
    }
    .swiper-buttons {
      margin-left: 10px;
    }
    .tab-image {
      height: 120px !important;
    }
    .product-item .p-3 {
      padding: 0.5rem !important;
    }
    .category-thumbnail {
      width: 80px;
      height: 80px;
    }
  }
  
  @media (max-width: 576px) {
    .display-1 {
      font-size: 1.8rem;
    }
    .fs-6 {
      font-size: 0.8rem !important;
    }
    .gap-3 {
      gap: 0.5rem !important;
    }
    .section-header {
      flex-direction: column;
      align-items: flex-start !important;
      gap: 10px;
    }
    .section-header .d-flex {
      width: 100%;
      justify-content: space-between !important;
    }
  }
</style>
    
    
