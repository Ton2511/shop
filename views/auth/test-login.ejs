<!-- views/auth/test-login.ejs -->
<div class="container my-5">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">Diagnostic Login Test</h1>
          </div>
          <div class="card-body">
            <div class="alert alert-info">
              <p><strong>This is a diagnostic page to test login functionality.</strong></p>
              <p>It provides detailed error information to help troubleshoot login issues.</p>
            </div>
            
            <form action="/test-login" method="POST" class="mt-4">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-control" required>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Test Login</button>
                <a href="/" class="btn btn-outline-secondary">Return to Homepage</a>
              </div>
            </form>
            
            <div class="mt-4">
              <h5>System Information:</h5>
              <table class="table table-sm">
                <tr>
                  <th>Node Version</th>
                  <td><%= process.version %></td>
                </tr>
                <tr>
                  <th>Environment</th>
                  <td><%= process.env.NODE_ENV || 'development' %></td>
                </tr>
                <tr>
                  <th>Platform</th>
                  <td><%= process.platform %></td>
                </tr>
                <tr>
                  <th>Memory Usage</th>
                  <td><%= Math.round(process.memoryUsage().rss / 1024 / 1024) %> MB</td>
                </tr>
                <tr>
                  <th>Uptime</th>
                  <td><%= Math.round(process.uptime()) %> seconds</td>
                </tr>
                <tr>
                  <th>Cookie Support</th>
                  <td>
                    <script>
                      document.write(navigator.cookieEnabled ? '<span class="text-success">Enabled</span>' : '<span class="text-danger">Disabled</span>');
                    </script>
                  </td>
                </tr>
                <tr>
                  <th>JavaScript</th>
                  <td><span class="text-success">Enabled</span> (this page is visible)</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>