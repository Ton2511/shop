<div class="custom-container-lg mx-auto d-flex flex-column mb-5">
    <div class="card mt-5 mb-5 p-4">
        <h1 class="text-cyan">Add New Category</h1>

        <form action="/categories/new" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Category Name</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" name="image" class="form-control">
            </div>

            <button type="submit" class="btn bg-teal text-light">Create Category</button>
            <a href="/categories" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
