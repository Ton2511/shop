<div class="bg-danger">
  <div class="custom-container-lg mx-auto d-flex flex-column mb-5 bg">
    <div class="card mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center  mb-1 col-12">
      <h1 class="text-cyan">Edit User</h1>
    </div>
    <form action="/users/<%= user.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <input type="text" class="form-control" style="width: 100%;" name="name" value="<%= user.name %>" required>
      </div>
      <div class="mb-3">
        <input type="email" class="form-control" style="width: 100%;" name="email" value="<%= user.email %>" required>
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" style="width: 100%;" name="password" placeholder="New Password">
      </div>
      <div class="text-center">
        <a href="/users/list" class="btn btn-dark">Back</a>
        <button type="submit" class="btn bg-teal">Update</button>
      </div>
    </form>
  </div>
  </div>
  </div>