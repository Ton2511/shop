  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lineModalLabel">ติดต่อผ่าน Line Ruk2</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="ปิด"></button>
      </div>
      <div class="modal-body text-center">
        <!-- QR Code -->
        <img src="/images/qrcodeline.jpg" alt="QR Code Line" class="img-fluid" style="max-width: 300px;">
        <!-- Line ID -->
        <p class="mt-2">Line ID: <strong>0864562964</strong></p>
        
      </div>
    </div>
  </div>
</div>
      
      <!-- รายละเอียดเพิ่มเติม -->
