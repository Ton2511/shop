<div class="container my-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/shop">หมวดหมู่สินค้า</a></li>
        <li class="breadcrumb-item active" aria-current="page">สินค้าทั้งหมด</li>
      </ol>
    </nav>
  
    <h1 class="mb-4">สินค้าทั้งหมด</h1>
    
    <div class="row">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="col-md-3 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="bg-light text-center py-4">
                <i class="bi bi-box fs-1"></i>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <% if (product.category) { %>
                  <span class="badge bg-secondary mb-2"><%= product.category.name %></span>
                <% } %>
                <p class="card-text">
                  <strong>รหัสสินค้า:</strong> <%= product.code %><br>
                  <strong>ราคา:</strong> ฿<%= product.price || 'ไม่ระบุ' %>
                </p>
                <% if (product.stock > 0) { %>
                  <span class="badge bg-success">มีสินค้า</span>
                <% } else { %>
                  <span class="badge bg-danger">สินค้าหมด</span>
                <% } %>
              </div>
              <div class="card-footer bg-white">
                <a href="/shop/product/<%= product._id %>" class="btn btn-primary w-100">
                  ดูรายละเอียด
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            ยังไม่มีสินค้าในระบบ
          </div>
        </div>
      <% } %>
    </div>
    
    <div class="text-center mt-4">
      <a href="/shop" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-2"></i>
        กลับไปยังหมวดหมู่สินค้า
      </a>
    </div>
  </div>